    "bin": [
        "bin/brain-games",
        "bin/brain-calc",
        "bin/brain-even",
        "bin/brain-gcd",
        "bin/brain-prime",
        "bin/brain-progression"
    ],
    "description": "CLI utilits",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Alexey Kolvakh",
            "email": "alex.kolvah@mail.ru"
        }
    ], 
    "autoload": {
        "psr-4": {
